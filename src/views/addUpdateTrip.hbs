{{> header}}
<main class="content m-sm-auto">
  <form action="{{route}}" method="{{method}}" class="bg-light card card-body login-register m-auto">
    <div class="form-group">
      <label for="trip-location">Destination</label>
      <input type="text" id="search-location" name="tripLocation" class="form-control"
        placeholder="Enter your destination here" value="{{trip.tripLocation}}" required>
    </div>
    <div class="form-group">
      <label for="trip-date">Date of travel</label>
      <input type="date" name="tripDate" class="form-control" value="{{trip.tripDate}}" required>
    </div>
    <p>
      <a class="btn btn-outline-dark" data-toggle="collapse" href="#trip-notes" role="button" aria-expanded="false"
        aria-controls="trip-notes">
        Add trip notes
      </a>
    </p>
    <div class="collapse" id="trip-notes">
      <textarea class="form-control mb-2" name="tripNotes" aria-label="With textarea"></textarea>
    </div>
    <button class="theme-btn btn" type="submit">
      {{#if trip}}
      Update trip
      {{else}}
      Add trip
      {{/if}}
    </button>
    <p class="mt-4"><a href="/trips">
        Back to trips</a>
    </p>
  </form>
</main>

<script>
  function activatePlacesSearch() {
    var input = document.getElementById("search-location");
    var options = {
      types: ['(cities)']
    };
    var autocomplete = new google.maps.places.Autocomplete(input, options)
  }
</script>
