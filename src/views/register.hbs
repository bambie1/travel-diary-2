{{> header}}
<main class="content m-sm-auto">
  <div class="bg-light card card-body login-register m-auto">
    <h4 class="text-center mb-3">
      <i class="fas fa-user-plus"></i> Register
    </h4>
    <form action="/users/register" method="POST" autocomplete="off">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="name" id="name" name="name" class="form-control" value="{{name}}" placeholder="Enter Name"
          required />
        <div class="text-danger" style="font-size: 0.7rem;">{{errorsBody.name}}</div>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" value="{{email}}" placeholder="Enter Email"
          required />
        <div class="text-danger" style="font-size: 0.7rem;">{{errorsBody.email}}</div>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control" value="{{password}}"
          placeholder="Create Password" required />
        <div class="text-danger" style="font-size: 0.7rem;">{{errorsBody.password}}</div>
      </div>
      <div class="form-group">
        <label for="password2">Confirm Password</label>
        <input type="password" id="password2" name="password2" class="form-control" value="{{password2}}"
          placeholder="Confirm Password" required />
        <div class="text-danger" style="font-size: 0.7rem;">{{errorsBody.password2}}</div>
      </div>
      <button type="submit" class="btn btn-secondary btn-block">
        Register
      </button>
    </form>
    <p class="mt-4">Have An Account? <a href="/users/login">Login</a></p>
  </div>
</main>