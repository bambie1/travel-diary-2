{{> header}}
<main class="content m-sm-auto">
  <div class="bg-light card card-body login-register m-auto">
    <h4 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h4>
    <form action="/users/login" method="POST">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control" value="{{email}}" placeholder="Enter Email"
          required />
        <div class="text-danger" style="font-size: 0.7rem;">{{emailErr}}</div>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control" value="{{password}}"
          placeholder="Enter Password" required />
        <div class="text-danger" style="font-size: 0.7rem;">{{pwErr}}</div>
      </div>
      <button type="submit" class="btn btn-secondary btn-block">Login</button>
    </form>
    <p class="mt-4">
      No Account? <a href="/users/register">Register</a>
    </p>
  </div>
</main>